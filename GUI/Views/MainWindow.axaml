<Window
    x:Class="ParkPI.GUI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="https://github.com/avaloniaui"
    xmlns:vm="clr-namespace:ParkPI.GUI.ViewModels"
    Title="ParkPI - Controle de Entrada"
    Width="400"
    Height="300">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel
        Margin="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="10">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="24"
            Text="Controle de Entrada" />

        <Button Command="{Binding RegistrarEntradaCommand}" Content="Registrar Entrada" />

        <TextBlock Foreground="Green" Text="{Binding Resultado}" />
    </StackPanel>
</Window>
